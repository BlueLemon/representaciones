$('#pago_form').html('<%= raw escape_javascript(render("pago")) %>');
skin();
if($.get("/reservas.js","qs=true", togrid, 'script')){

  $("#movimiento_reserva_id").change(function(){
    buscar_saldo();
  });

  $("#search_operadora_id_or_agencia_id_eq").change(function(){
    buscar_saldo();
  });

  function buscar_saldo(){
    var reserva = $("#movimiento_reserva_id").val();
    var entidad = $("#search_operadora_id_or_agencia_id_eq").val();
    var moneda_id;

    $.getJSON("/reservas/"+reserva+".json",function(data){
      moneda_id = data["reserva"]["moneda_id"];

      $.get("/entidads/"+entidad+"/saldos.js","moneda_id="+moneda_id, togrid, 'script')
    });
  }
}

