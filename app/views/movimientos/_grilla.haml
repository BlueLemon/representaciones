%p.notice=flash[:notice]
#movimientos_grid
  %table.togrid{:id=>"movimientos_#{Time.now}"}
    %tr
      %th Fecha
      %th Reserva
      %th Titular
      %th Operacion
      %th Entidad
      %th Monto
      -if can? :destroy, @movimientos.first
        %th Acciones

    - for movimiento in @movimientos
      %tr

        %td= movimiento.try(:fecha)
        %td= movimiento.try(:reserva_id)
        %td= movimiento.try(:reserva).try(:pasajeros).try(:first).try(:name)
        %td= movimiento.type
        %td
          =movimiento.try(:entidad).type
          =movimiento.try(:entidad).try(:name)
        %td
          = movimiento.monto.to_money.format
        -if can? :destroy, @movimientos.first and movimiento.movimientos.count<=0

          %td
            = link_to 'Eliminar', {:action=>:destroy, :id=>movimiento.id}, :confirm => 'Está seguro? (esta acción no se puede deshacer)', :method=>:delete, :remote=>true

  %table.wide
    %tr
      %td
        Pesos $
        %b
          =@total["ARS"]
      %td
        Dolares u$s
        %b
          =@total["USD"]
      %td
        Euros €
        %b
          =@total["EUR"]
  .action_bar
    =link_to "imprimir",{:search=>params[:search],:format=>'pdf'}

