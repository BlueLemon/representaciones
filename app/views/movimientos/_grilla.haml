#movimientos_grid
  %table.togrid{:id=>"movimientos_#{Time.now}"}
    %tr
      %th Fecha
      %th Reserva
      %th Titular
      %th Operacion
      %th Entidad
      %th Monto

    - total = Hash.new

    - for movimiento in @movimientos
      %tr

        %td= movimiento.try(:fecha)
        %td= movimiento.try(:reserva_id)
        %td= movimiento.try(:reserva).try(:pasajeros).try(:first).try(:name)
        %td= movimiento.type
        %td
          =movimiento.try(:entidad).type
          =movimiento.try(:entidad).try(:name)
        %td
          = movimiento.monto.to_money.format
          -total[movimiento.monto.currency_as_string] = movimiento.monto
  %table.wide
    %tr
      %td
        Pesos $
        %b
          =total["ARS"]
      %td
        Dolares u$s
        %b
          =total["USD"]
      %td
        Euros â‚¬
        %b
          =total["EUR"]

