.ui-widget
  %h3.ui-widget-header movimiento
  .left{:style=>'float:right'}
    .action_bar
      -if can? :edit, @movimiento
        = link_to 'Editar', edit_movimiento_path(@movimiento),:remote=>true,:width =>'200px'
    %br


  %p
    %b Fecha:
    = @movimiento.fecha

  %p
    %b Monto:
    = @movimiento.format_monto
  %p
    %b Reserva:
    =@movimiento.reserva_id
  %p
    %b="#{@movimiento.entidad.type}:"
    =@movimiento.entidad.name
  %p
    =@movimiento.observaciones
