= form_for(@movimiento,:remote=>true) do |f| 
  .ui-widget.ui-widget-content
    - if @movimiento.errors.any? 
      #error_explanation
        %h2="#{pluralize(@movimiento.errors.count, 'error')} prohibited this movimiento from being saved:"
  
        %ul
          - @movimiento.errors.full_messages.each do |msg| 
            %li= msg 
    
    
    = render :partial => "movimientos/comunes",:locals=>{:f=>f}
    
    %table
      %tr
        =render :partial =>'montos/form',:locals=>{:f=>f}
        

    .field
      = f.label :Tipo_de_deposito
      %br
      = collection_select(:movimiento, :tdeposito_id, Tdeposito.all, :id, :name, :prompt => false)                  
      =# f.text_field :numero,:size=>10
      %br
      = collection_select(:movimiento, :tpago_id, Tpago.all, :id, :name, :prompt => false)
    
    .actions
      = f.submit 
