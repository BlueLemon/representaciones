.ui-widget
  %h1.ui-widget-header Movimientos

  .action_bar
    = link_to 'Imprimir', {:search=>params[:search],:format=>'pdf'}

  .mytabs
    %ul
      %li
        %a{:href=>"#tabs-movimientos-1"} Movimientos
      %li
        %a#deposito_new{:href=>"#tabs-movimientos-2"} Deposito
      %li
        %a#pago_new{:href=>"#tabs-movimientos-3"} Pago
      %li
        %a#cambio_new{:href=>"#tabs-movimientos-4"} Cambio
      %li
        %a#directo_new{:href=>"#tabs-movimientos-5"} Directo


    #tabs-movimientos-1
      = render :partial => "search"
      #movimientos
        =render 'movimientos'

    #tabs-movimientos-2
      #deposito_form

    #tabs-movimientos-3
      #pago_form

    #tabs-movimientos-4
      #cambio_form

    #tabs-movimientos-5

      = semantic_form_for @reservas_search, :remote => true do |form|
        =form.inputs do
          =form.input :agency_id_or_operadora_id_eq, :collection => Entidad.all
          =form.input :referencia_sw
          =form.input :pasajeros_name_sw
      #reservas
        =render 'reservas/reservas'

      #directo_form

