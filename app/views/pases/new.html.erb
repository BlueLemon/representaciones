<%= form_for @pase do |f| %>

  <p>
  <%= f.label :origen_id %>
  <%= f.select :origen_id, @pase.posibles_reservas %>
  </p>

  <p>
  <%= f.label :destino_id %>
  <%= f.select :destino_id, @pase.posibles_reservas, prompt: "Indique destino del pase" %>
  </p>

  <p>
  <%= f.label :monto %>
  <%= f.text_field :monto %>
  </p>

  <p>
  <%= f.label :cuentas_afectadas_agencia %>
  <%= f.radio_button("cuentas_afectadas", "agencia") %>
  <%= f.label :cuentas_afectadas_operadora %>
  <%= f.radio_button("cuentas_afectadas", "operadora") %>
  <%= f.label :cuentas_afectadas_ambas %>
  <%= f.radio_button("cuentas_afectadas", "ambas", checked: true) %>
  </p>

  <p>
  <%= f.submit %>
  </p>
<% end %>
