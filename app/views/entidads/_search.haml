%h3.ui-widget-header Busqueda
= form_for @search,  :html => {:method => :get,:class => 'search'} do |f|
   
  %br 
  = f.label :name
  %br 
  = f.text_field :name_sw
  .hide
    = collection_select(:search, :tentidad_id_eq, Tentidad.all, :id, :name, :prompt =>true)
  %br
  =f.label 'Baja'
  %br
  = f.check_box :hidden_eq
  %br
  = f.submit('Buscar') 
