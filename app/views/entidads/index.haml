.ui-widget
  %h1.ui-widget-header Entidads
  
  .action_bar
    -if can? :new, Entidad
      = link_to 'Nuevo Entidad', new_entidad_path,:remote => true 
    = link_to 'Imprimir', {:search=>params[:search],:format=>'pdf'} 
    
  .mytabs
    %ul
      %li
        %a{:href=>"#tabs-entidads-1"} Entidad
      %li
        %a{:href=>"#tabs-entidads-2"} Formulario
      
    #tabs-entidads-1
      = render :partial => "search"
      #entidads
        =render 'entidads'
    #tabs-entidads-2   
      #entidad_form        
