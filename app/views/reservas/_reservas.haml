=will_paginate @reservas
#reservas_grid
  %table.togrid{:id=>"reservas_#{time_id}"}
    %tr
      %th ID
      %th Titular
      %th Referencia
      %th Salida
      %th Saldo Agencia
      %th Saldo Operadora
      %th Acciones

    - for reserva in @reservas
      %tr
        %td= reserva.id
        %td= reserva.titular
        %td= reserva.referencia
        %td= reserva.salida
        %td.money= reserva.saldo_agencia.format
        %td.money= reserva.saldo_operadora.format
        %td= link_to("Mostrar", reserva_path(reserva), :remote => true) + " " + link_to("Editar", edit_reserva_path(reserva), :remote => true) + " " + link_to("Pagar", new_reserva_deposito_path(reserva))

.action_bar
  =link_to "imprimir",{:search=>params[:search],:format=>'pdf'}

