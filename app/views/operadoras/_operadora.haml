.ui-widget
  %h3.ui-widget-header operadora  
  .left{:style=>'float:right'}
    .action_bar
      -if can? :edit, @operadora 
        = link_to 'Editar', edit_operadora_path(@operadora),:remote=>true,:width =>'200px'
    %br
  
  
  %p
    %b Name:
    = @operadora.name
  =render :partial =>'direccions/dir',:locals =>{:dir =>@operadora.direccion} 
  
  = render :partial => "version"
