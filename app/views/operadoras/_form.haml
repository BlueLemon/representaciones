= form_for(@operadora,:remote=>true) do |f| 
  .ui-widget.ui-widget-content
    - if @operadora.errors.any? 
      #error_explanation
        %h2="#{pluralize(@operadora.errors.count, 'error')} prohibited this operadora from being saved:"
  
        %ul
          - @operadora.errors.full_messages.each do |msg| 
            %li= msg 
    
    
    .field
      = f.label :Name
      %br
      = f.text_field :name
    
    = render :partial => "direccions/field_for"    
    
    .actions
      = f.submit 
