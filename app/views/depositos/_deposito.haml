.ui-widget
  %h3.ui-widget-header Pago
  .left{:style=>'float:right'}
    .action_bar
      -if can? :edit, @deposito
        = link_to 'Editar', edit_movimiento_path(@deposito),:remote=>true,:width =>'200px'
    %br


  %p
    %b Fecha:
    = @deposito.fecha

  %p
    %b Monto:
    = @deposito.format_monto
  %p
    %b Reserva:
    =@deposito.reserva_id
  %p
    %b="#{@deposito.entidad.type}:"
    =@deposito.entidad.name
  %p
    =@deposito.observaciones
