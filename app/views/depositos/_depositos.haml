.half.left
  %h3.ui-widget-header Listado
  =will_paginate @depositos

  #depositos_grid
    %table#migrilla.togrid
      %tr
      
        %th Entidad
        %th Tipo de pago
      
      %th Acciones
  
        
      - for deposito in @depositos   
        %tr
          
          %td= deposito.try(:entidad).try(:name)
          %td
            = deposito.try(:tpago).try(:name)
            = deposito.try(:numero)

          %td
            = link_to 'Show', deposito,:remote=>true 
            -if can? :edit, deposito
              = link_to 'Edit', edit_deposito_path(deposito),:remote=>true  
            -if can? :destroy, deposito
              = link_to 'Destroy', deposito, :confirm => 'Are you sure?', :method => :delete,:remote=>true  
