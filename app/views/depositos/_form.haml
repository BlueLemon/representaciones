= form_for(@deposito,:remote=>true) do |f| 
  .ui-widget.ui-widget-content
    - if @deposito.errors.any? 
      #error_explanation
        %h2="#{pluralize(@deposito.errors.count, 'error')} prohibited this deposito from being saved:"
  
        %ul
          - @deposito.errors.full_messages.each do |msg| 
            %li= msg 
    
    
    .field
      = f.label :entidad
      %br
      = collection_select(:deposito, :entidad_id, Entidad.all, :id, :name, :prompt => false)
    .field
      = f.label :Tipo_de_pago
      %br
      = collection_select(:deposito, :tpago_id, Tpago.all, :id, :name, :prompt => false)      
    
    .field
      = f.label :Numero
      %br
      = f.text_field :numero
    = text_field :pago,:reserva_id
    
    = f.fields_for :movimiento do |m|
      .field
        = m.label :Fecha
        %br
        = m.text_field :fecha,:class =>'datepicker',:size =>10
      .field
        = m.label :Monto
        %br
        = m.text_field :monto
        = collection_select(:movimiento, :moneda_id, Moneda.all, :id, :simbolo, :prompt => false)      

    
    
    .actions
      = f.submit 
