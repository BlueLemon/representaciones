#pagos_grid
  %table.togrid{:id=>"pagos_#{Time.now}"}
    %tr
      %th Fecha
      %th Reserva
      %th Titular
      %th Operacion
      %th Entidad
      %th Monto

    - total = Array.new(3,0)

    - for pago in @pagos   
      %tr
        
        %td= pago.try(:fecha) 
        %td= pago.try(:reserva_id)
        %td= pago.reserva.pasajeros.first.name
        %td= pago.try(:tpago).try(:name)
        %td
          =pago.try(:entidad).try(:tentidad).try(:name)
          =pago.try(:entidad).try(:name)
        %td
          = pago.try(:monto).try(:moneda).try(:simbolo)
          = pago.try(:monto).try(:valor)  
          -total[pago.try(:monto).try(:moneda_id)-1] += pago.try(:monto).try(:valor)
  %table.wide
    %tr
      %td
        Pesos $
        %b
          =total[0]
      %td
        Dolares u$s
        %b
          =total[1]
      %td
        Euros â‚¬
        %b
          =total[2]

