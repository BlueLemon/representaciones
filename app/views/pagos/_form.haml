= form_for(@pago, :remote => true) do |f|
  .ui-widget.ui-widget-content
    = error_message(@pago)

    = render :partial => "movimientos/comunes", :locals => { :f => f }

    = semantic_form_for @search,:html => {:method => :get,:class => 'search_reserva'}  do |form|
      =form.inputs do
        =form.input :agencia_id_or_operadora_id_eq,:collection => Entidad.all

    #reservas
      =render 'reservas/reservas'

    #entidad_form

    = f.hidden_field :entidad_id
    = f.hidden_field :reserva_id
    = f.hidden_field :saldo_id

    #saldos
    %br
    = render :partial => 'montos/form', :locals => { :f => f }

    = f.label :Tipo_de_deposito
    %br
    = collection_select(:movimiento, :tdeposito_id, Tdeposito.all, :id, :name, :prompt => false)

    = f.text_field :numero, :size => 10

    .actions
      = f.submit

