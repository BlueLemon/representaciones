.half.left
  %h3.ui-widget-header Busqueda
  = form_for @search,  :html => {:method => :get,:class => 'search'} do |f|
     
    = f.label :name
    %br 
    = f.text_field :name_contains
    %br 
    = f.label :direccion_id
    %br 
    = f.text_field :direccion_id_eq
    %br
    =f.label 'Baja'
    %br
    = f.check_box :hidden_eq
    %br
    = f.submit('Buscar') 
