.half.left
  %h3.ui-widget-header Listado
  =will_paginate @tdepositos

  #tdepositos_grid
    %table#migrilla.togrid
      %tr
      
        %th Name
      
      %th Acciones
  
        
      - for tdeposito in @tdepositos   
        %tr
          
          %td= tdeposito.try(:name) 
          
          %td
            = link_to 'Show', tdeposito,:remote=>true 
            -if can? :edit, tdeposito
              = link_to 'Edit', edit_tdeposito_path(tdeposito),:remote=>true  
            -if can? :destroy, tdeposito
              = link_to 'Destroy', tdeposito, :confirm => 'Are you sure?', :method => :delete,:remote=>true  
