= form_for(@<%= file_name %>,:remote=>true) do |f| 
  .ui-widget.ui-widget-content
    - if @<%= file_name %>.errors.any? 
      #error_explanation
        %h2="#{pluralize(@<%= file_name %>.errors.count, 'error')} prohibited this <%= file_name %> from being saved:"
  
        %ul
          - @<%= file_name %>.errors.full_messages.each do |msg| 
            %li= msg 
    
    <% for attribute in @model_attributes %>
    .field
      = f.label :<%= attribute.name.capitalize %>
      %br
      = f.text_field :<%= attribute.name %>
    <% end %>
    
    .actions
      = f.submit 
